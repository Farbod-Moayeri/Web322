<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
        <meta name="author" content="Farbod Moayeri">
        <link rel="stylesheet" href="/css/main.css" />
    <title>Add Set</title>
</head>
<body>
    

    <header>
        <%- include('partials/navbar', {page: '/lego/addSet' }) %>
    </header>

    <main>
        <div class="hero bg-blue-500 text-white p-10 text-center mb-10">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-4xl mb-4">Add Set</h1>
                    <p class="mb-4">Add a set using the form below!</p>
                </div>
            </div>

        <form action="/lego/addSet" method="POST">
            <div>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>

            <div>
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" required>
            </div>

            <div>
                <label for="num_parts">Number of Parts:</label>
                <input type="number" id="num_parts" name="num_parts" required>
            </div>

            <div>
                <label for="img_url">Image URL:</label>
                <input type="url" id="img_url" name="img_url" required>
            </div>

            <div>
                <label for="theme_id">Theme:</label>
                <select id="theme_id" name="theme_id" required>
                    <% themes.forEach(theme => { %>
                        <option value="<%= theme.id %>"><%= theme.name %></option>
                    <% }) %>
                </select>
            </div>

            <div>
                <label for="set_num">Set Number:</label>
                <input type="text" id="set_num" name="set_num" required>
            </div>

            <div>
                <button type="submit">Add Set</button>
            </div>
        </form>
    </main>

    <%- include('partials/footer') %>
</body>
</html>
